#!/usr/bin/env ys-0

defn main(width=5):
  say: tree(width)

defn tree(width):
  top =: (width .. 1)
    .map(partial(line width))
    .join("\n")

  trunk =: trunk(width) * 2

  =>: |-
    $top
    $trunk

defn trunk(num): "$spaces(num)*\n"

defn line(width, num):
  :: "`stars` is a lexically defined function"
  stars =: \(_.++ * '*')

  join '':
    spaces: num
    stars: (width - num) * 2

defn spaces(num): num * ' '
