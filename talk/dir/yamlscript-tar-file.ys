Makefile: |
  FILES := hello.clj

  build: $(FILES)

  %.clj: %.ys
  	ys -c $< > $@

  clean:
  	$(RM) hello.* Makefile

hello.ys: |
  !yamlscript/v0
  println: "Hello!"

--- !yamlscript/v0
each [[file text] $]: spit(file text)

sh:: make hello.clj
# Replace '(+++' with '(identity':
sh:: perl -p0i -e 's/..../(identity/' hello.clj
sh:: bb hello.clj
