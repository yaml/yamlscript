#!/usr/bin/env ys-0

defn main(number=99):
  each [n (number .. 1)]:
    say: paragraph(n)

defn paragraph(num): |
  $bottles(num) of Perl on the wall,
  $bottles(num) of Perl.
  Take one down, slurp it around,
  $bottles(num - 1) of Perl on the wall.

defn bottles(n):
  cond:
    n == 0 : 'No more bottles'
    n == 1 : '1 bottle'
    =>     : "$n bottles"
